<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/login.css">
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <title>Login</title>
</head>
<body>

    <div class="head-ing">
    
        <h1> JOBSCORNER </h1> 
    </div>
    
    
    <div class="login-box">
        
        <h2>Login</h2>
        <form id="loginForm" action="login" method="post">
            <div class="user-box">
                <input type="text" name="username" required="">
                <label for="username">Username</label>
            </div>

            <div class="user-box">
                <input type="password" name="pwd" required="">
                <label for="pwd">Password</label>
            </div>

            <button type="submit" class="login-button">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                Login
            </button>
            
        </form>
            <p style="left: 20px;"><a href="/register" style="color: white; ">Don't have an account?...Signup</a></p>
        <div class="login-msg" id="loginMessage"></div>
        </div>
    
    

    <script>
        $(document).ready(function () {
          $('#loginForm').submit(function (e) {
            e.preventDefault();
            $.post($(this).attr('action'), $(this).serialize())
              .done(function (data) {
                // Successful login, redirect or handle as needed
                window.location.href = '/';
              })
              .fail(function (xhr) {
                // Failed login, show an alert with the error message
                $('#loginMessage').html(xhr.responseJSON.error);
              });
          });
        });
      </script>
</body>
</html>